# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenSearch Configuration (for semantic search and indexing)
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_opensearch_password

# AWS Configuration (optional - use AWS credentials file if available)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# LangSmith Configuration (for LangChain workflow debugging)
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=multimodal-audit-engine

# FastAPI Server Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# OpenTelemetry Configuration (optional)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Video Processing
VIDEO_TEMP_DIR=./temp_videos
MAX_VIDEO_SIZE_MB=500

# Content Analysis
BATCH_SIZE=10
COMPLIANCE_THRESHOLD=0.8
